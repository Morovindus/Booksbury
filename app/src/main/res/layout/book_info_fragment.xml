<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_marginHorizontal="20dp"
            android:id="@+id/blackRectangle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="45dp">

            <Button
                android:id="@+id/button_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:background="@drawable/arrow_left"/>

            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/dms_erifdisplay_regular"
                android:text="@string/title_book_info"
                android:textColor="?android:textColor"
                android:textSize="22sp" />

            <Button
                style="@style/Picture24dp"
                android:id="@+id/button_favourites"
                android:layout_alignParentEnd="true"
                android:background="@drawable/save_2"/>

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_marginHorizontal="20dp"
        android:id="@+id/nestedScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@+id/cardView"
        android:layout_marginTop="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/mainImage"
                    android:layout_width="wrap_content"
                    android:layout_height="220dp"
                    android:src="@drawable/book_more" />

                <RelativeLayout
                    android:id="@+id/miniTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mainImage"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:id="@+id/titleBook"
                        android:layout_width="199dp"
                        android:layout_height="30dp"
                        android:text="@string/book_title_4"
                        android:fontFamily="@font/dms_erifdisplay_regular"
                        android:textColor="?android:textColor"
                        android:textSize="22sp"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:layout_width="170dp"
                        android:layout_height="21dp"
                        android:text="@string/author_4"
                        android:textColor="?android:textColorSecondary"
                        android:textSize="16sp"
                        android:id="@+id/nameAuthor"
                        android:layout_marginTop="32dp"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="38dp"
                        android:text="@string/price_4"
                        android:fontFamily="@font/dms_erifdisplay_regular"
                        android:textColor="?android:textColor"
                        android:textSize="28sp"
                        android:id="@+id/price"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="15dp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/miniTitleSecond"
                    android:layout_width="match_parent"
                    android:layout_height="69dp"
                    android:layout_marginTop="24dp"
                    android:layout_below="@id/miniTitle">

                    <RelativeLayout
                        android:id="@+id/miniTitle1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/rectangle"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter" />

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_centerHorizontal="true"
                            android:text="@string/text_released"
                            android:textColor="?android:textColorSecondary"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/dateReleased"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/textView11"
                            android:layout_marginTop="4dp"
                            android:layout_centerHorizontal="true"
                            android:text="@string/date_4_book"
                            android:textAlignment="center"
                            android:textColor="?android:textColor"
                            android:textSize="16sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/miniTitle2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/imageView23"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/rectangle" />

                        <TextView
                            android:id="@+id/textView113"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_centerHorizontal="true"
                            android:text="@string/text_part"
                            android:textAlignment="center"
                            android:textColor="?android:textColorSecondary"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/part"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/textView113"
                            android:layout_marginTop="4dp"
                            android:layout_centerHorizontal="true"
                            android:text="@string/part_4_book"
                            android:textAlignment="center"
                            android:textColor="?android:textColor"
                            android:textSize="16sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/miniTitle3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/imageView21"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/rectangle"
                            android:scaleType="fitCenter" />

                        <TextView
                            android:id="@+id/textView111"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_centerHorizontal="true"
                            android:text="@string/text_page"
                            android:textAlignment="center"
                            android:textColor="?android:textColorSecondary"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/page"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/textView111"
                            android:layout_marginTop="4dp"
                            android:layout_centerHorizontal="true"
                            android:textAlignment="center"
                            android:text="@string/page_4_book"
                            android:textColor="?android:textColor"
                            android:textSize="16sp" />

                    </RelativeLayout>

                </LinearLayout>

                <com.google.android.material.tabs.TabLayout
                    style="@style/MyTabLayout"
                    android:layout_below="@id/miniTitleSecond"
                    android:layout_marginTop="30dp"
                    android:id="@+id/tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    app:tabIndicatorColor="@color/black"
                    app:tabTextAppearance="@style/TabText"
                    app:tabIndicatorFullWidth="true"
                    >

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tabs_synopsis" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tabs_details" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tabs_author" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tabs_review" />

                </com.google.android.material.tabs.TabLayout>

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/tabLayout"
                    android:background="?android:textColorSecondary" />

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPager"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/line"/>

            </RelativeLayout>


        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:id="@+id/cardView"
        android:layout_alignParentBottom="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@drawable/shadow" />

        <FrameLayout
            android:layout_gravity="center"
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_marginTop="24dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</RelativeLayout>