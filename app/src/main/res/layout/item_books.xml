<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageCoverBook"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="?android:windowBackground"
        android:scaleType="fitCenter"
        android:src="@drawable/covers_book_1"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="20dp">


        <TextView
            android:id="@+id/title_book"
            android:fontFamily="@font/dms_erifdisplay_regular"
            android:text="@string/title_book_first"
            android:textColor="?android:textColor"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/name_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/author_first"
            android:textColor="?android:textColorSecondary"
            android:textSize="12sp"
            android:layout_marginTop="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">

            <LinearLayout
                android:id="@+id/containerStars_1"
                android:layout_width="78dp"
                android:layout_height="14dp"
                android:orientation="horizontal"
                android:layout_gravity="top|start"
                android:layout_marginTop="0.5dp">

                <ImageView
                    android:id="@+id/starFirst"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/star_white"
                    android:scaleType="fitCenter" />

                <ImageView
                    android:id="@+id/starSecond"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/star_white"
                    android:scaleType="fitCenter" />

                <ImageView
                    android:id="@+id/starThird"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/star_white"
                    android:scaleType="fitCenter" />

                <ImageView
                    android:id="@+id/starFourth"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/star_white"
                    android:scaleType="fitCenter" />

                <ImageView
                    android:id="@+id/starFifth"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="2dp"
                    android:src="@drawable/star_white"
                    android:scaleType="fitCenter" />
            </LinearLayout>

            <TextView
                android:id="@+id/textRating"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:text="@string/ratings_first"
                android:layout_marginStart="7dp"
                android:layout_gravity="center|end"
                android:textColor="?android:textColorSecondary"
                android:textSize="10sp"
                tools:ignore="SmallSp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

