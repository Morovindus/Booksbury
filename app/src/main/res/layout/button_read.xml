<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageButton
        android:id="@+id/button0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/button_buy_book"
        android:background="?android:windowBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintWidth_percent="0.43"
        android:scaleType="fitCenter"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView0"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/book_black"
        android:scaleType="fitCenter"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="@id/button0"
        app:layout_constraintBottom_toBottomOf="@id/button0"
        app:layout_constraintStart_toStartOf="@id/button0"/>

    <TextView
        android:id="@+id/textView0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/start_reading"
        android:textSize="14sp"
        android:layout_marginStart="8dp"
        android:textColor="?android:textColor"
        app:layout_constraintWidth_percent="0.22"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@id/imageView0"
        app:layout_constraintTop_toTopOf="@id/button0"
        app:layout_constraintBottom_toBottomOf="@id/button0"/>

    <ImageButton
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/button_start"
        android:background="?android:windowBackground"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toEndOf="@id/button0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.43"
        android:scaleType="fitCenter"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/play_circle"
        android:layout_marginStart="40dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="@id/button"
        app:layout_constraintBottom_toBottomOf="@id/button"
        app:layout_constraintStart_toStartOf="@id/button"/>

    <TextView
        android:id="@+id/textView103"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/play_audio"
        android:textSize="14sp"
        android:textColor="?android:windowBackground"
        android:layout_marginStart="8dp"
        app:layout_constraintWidth_percent="0.18"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@id/imageView1"
        app:layout_constraintTop_toTopOf="@id/button"
        app:layout_constraintBottom_toBottomOf="@id/button"/>

</androidx.constraintlayout.widget.ConstraintLayout>