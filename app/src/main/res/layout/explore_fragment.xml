<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Booksbury">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_marginHorizontal="20dp"
            android:id="@+id/blackRectangle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="45dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:fontFamily="@font/dms_erifdisplay_regular"
                android:text="@string/explore_title"
                android:textColor="?android:textColor"
                android:textSize="22sp" />

            <Button
                style="@style/Picture24dp"
                android:id="@+id/buttonNotification"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@+id/buttonSearch"
                android:background="@drawable/notification" />

            <Button
                style="@style/Picture24dp"
                android:id="@+id/buttonSearch"
                android:layout_alignParentEnd="true"
                android:background="@drawable/search_normal" />

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="30dp"
        android:layout_above="@+id/cardView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <HorizontalScrollView
                android:layout_width="505dp"
                android:layout_height="38dp"
                android:id="@+id/buttonsContainer"
                android:layout_marginStart="20dp"
                android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_trending"
                    android:layout_width="105dp"
                    android:layout_height="38dp"
                    android:background="@drawable/button_black"
                    android:textColor="?android:textColor"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:text="@string/button_trending" />

                <Button
                    android:id="@+id/button_romance"
                    android:layout_marginStart="10dp"
                    android:layout_width="105dp"
                    android:layout_height="38dp"
                    android:background="@drawable/button_white"
                    android:textColor="?android:textColor"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:text="@string/button_romance" />


                <Button
                    android:id="@+id/button_children"
                    android:layout_marginStart="10dp"
                    android:layout_width="105dp"
                    android:layout_height="38dp"
                    android:background="@drawable/button_white"
                    android:textColor="?android:textColor"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:text="@string/button_children" />

                <Button
                    android:id="@+id/button_horror"
                    android:layout_marginStart="10dp"
                    android:layout_width="105dp"
                    android:layout_height="38dp"
                    android:background="@drawable/button_white"
                    android:textColor="?android:textColor"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:text="@string/button_horror" />

            </LinearLayout>

            </HorizontalScrollView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_below="@id/buttonsContainer"
                android:orientation="vertical">


            </androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/cardView"
        android:layout_alignParentBottom="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@drawable/shadow" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/blackRectangleBottom"
            android:layout_width="match_parent"
            android:layout_height="93dp">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.4" />

            <Button
                style="@style/Picture24dp"
                android:id="@+id/button_home"
                android:background="@drawable/home_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/imageView12"
                app:layout_constraintTop_toTopOf="@+id/guideline_horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/guideline_horizontal"/>

            <Button
                style="@style/Picture24dp"
                android:id="@+id/imageView12"
                android:background="@drawable/more"
                app:layout_constraintStart_toEndOf="@id/button_home"
                app:layout_constraintEnd_toStartOf="@id/button_favourites"
                app:layout_constraintTop_toTopOf="@+id/guideline_horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/guideline_horizontal"/>

            <ImageView
                android:id="@+id/squareImageView"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/circle"
                app:layout_constraintStart_toStartOf="@id/imageView12"
                app:layout_constraintTop_toBottomOf="@id/guideline_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginStart="9dp"/>

            <Button
                style="@style/Picture24dp"
                android:id="@+id/button_favourites"
                android:background="@drawable/save_2"
                app:layout_constraintStart_toEndOf="@id/imageView12"
                app:layout_constraintEnd_toStartOf="@id/button_profile"
                app:layout_constraintTop_toTopOf="@+id/guideline_horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/guideline_horizontal"/>

            <Button
                style="@style/Picture24dp"
                android:id="@+id/button_profile"
                android:background="@drawable/profile"
                app:layout_constraintStart_toEndOf="@id/button_favourites"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline_horizontal"
                app:layout_constraintBottom_toBottomOf="@+id/guideline_horizontal"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</RelativeLayout>