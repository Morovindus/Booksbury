<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:elevation="4dp"
        app:contentInsetStart="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/blackRectangle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="45dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/imageView0"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="0dp"
                android:src="@drawable/book" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="31dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:fontFamily="@font/dms_erifdisplay_regular"
                android:text="@string/Main_title_books"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_toEndOf="@id/textView2"
                android:fontFamily="@font/dms_erifdisplay_regular"
                android:text="@string/Main_title_bury"
                android:textColor="@color/orange"
                android:textSize="22sp" />

            <Button
                android:id="@+id/imageView2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@+id/imageView3"
                android:background="@drawable/notification" />

            <Button
                android:id="@+id/imageView3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="0dp"
                android:background="@drawable/search_normal" />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="30dp"
        android:layout_above="@+id/cardView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/Image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <!-- Изображение -->
                <ImageButton
                    android:id="@+id/imageView01"
                    android:layout_width="374dp"
                    android:layout_height="342dp"
                    android:background="@color/white"
                    android:scaleType="fitXY"
                    android:src="@drawable/book_main" />

                <TextView
                    android:id="@+id/textView01"
                    android:layout_width="198dp"
                    android:layout_height="50dp"
                    android:layout_gravity="start|top"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="280dp"
                    android:fontFamily="@font/dms_erifdisplay_regular"
                    android:text="@string/Main_description"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/backgroundRectangle"
                    android:layout_width="374dp"
                    android:layout_height="74dp"
                    android:layout_gravity="bottom|start"
                    android:background="@drawable/rectangle_562"
                    android:src="@android:color/transparent" />

                <Button
                    android:id="@+id/buttonImage"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_gravity="top|right"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/rectangle_564" />

                <!-- Дополнительная картинка внутри кнопки -->
                <ImageView
                    android:id="@+id/extraImage"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="23dp"
                    android:layout_marginEnd="23dp"
                    android:src="@drawable/save_1" />

                <RelativeLayout
                    android:id="@+id/container1"
                    android:layout_width="120dp"
                    android:layout_height="21dp"
                    android:layout_gravity="right"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="280dp">

                    <RelativeLayout
                        android:id="@+id/container3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="1dp">

                        <ImageView
                            android:id="@+id/ellipse_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ellipse_3" />

                        <ImageView
                            android:id="@+id/polygon_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="7dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/polygon_1" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/textListen"
                        android:layout_width="68dp"
                        android:layout_height="21dp"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/container3"
                        android:gravity="center_vertical"
                        android:text="@string/Listen"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/container2"
                    android:layout_width="120dp"
                    android:layout_height="21dp"
                    android:layout_gravity="right"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="309dp">


                    <ImageView
                        android:id="@+id/ellipse_4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="1dp"
                        android:background="@drawable/ellipse_4" />


                    <TextView
                        android:id="@+id/textAuthor"
                        android:layout_width="92dp"
                        android:layout_height="21dp"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/ellipse_4"
                        android:text="@string/name_author"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </RelativeLayout>

            </FrameLayout>

            <!-- Текст -->
            <TextView
                android:id="@+id/textView"
                android:layout_width="151dp"
                android:layout_height="30dp"
                android:layout_below="@id/Image"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/dms_erifdisplay_regular"
                android:text="@string/popular_books"
                android:textColor="@color/black"
                android:textSize="22sp">

            </TextView>

            <!-- Вторая картинка -->
            <ImageView
                android:id="@+id/secondImage"
                android:layout_width="347dp"
                android:layout_height="302dp"
                android:layout_below="@id/textView"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/frame20" />


        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/cardView"
        android:layout_alignParentBottom="true">

    <!-- Виджет с тенью сверху -->
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@drawable/shadow" />



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/blackRectangleBottom"
        android:layout_width="414dp"
        android:layout_height="93dp"
        android:background="@color/white">

        <!-- Горизонтальная направляющая -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4" />

        <Button
            android:id="@+id/imageView11"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/home"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_more"
            app:layout_constraintTop_toTopOf="@+id/guideline_horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/guideline_horizontal"/>

        <Button
            android:id="@+id/button_more"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/more_2"
            app:layout_constraintStart_toEndOf="@id/imageView11"
            app:layout_constraintEnd_toStartOf="@id/imageView13"
            app:layout_constraintTop_toTopOf="@+id/guideline_horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/guideline_horizontal"/>

        <Button
            android:id="@+id/imageView13"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/save_2"
            app:layout_constraintStart_toEndOf="@id/button_more"
            app:layout_constraintEnd_toStartOf="@id/imageView14"
            app:layout_constraintTop_toTopOf="@+id/guideline_horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/guideline_horizontal"/>

        <Button
            android:id="@+id/imageView14"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/profile"
            app:layout_constraintStart_toEndOf="@id/imageView13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline_horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/guideline_horizontal"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</RelativeLayout>